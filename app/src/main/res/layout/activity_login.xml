<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_gravity="center">

    <Button
        android:id="@+id/exit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:background="@android:drawable/ic_delete"
        android:backgroundTint="#050505" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/login_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해제를 위해 암호를 입력해주세요"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp">
        <Button
            android:id="@+id/pw1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_login_pw_btn"
            android:layout_margin="16dp"/>
        <Button
            android:id="@+id/pw2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_login_pw_btn"
            android:layout_margin="16dp"/>
        <Button
            android:id="@+id/pw3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_login_pw_btn"
            android:layout_margin="16dp"/>
        <Button
            android:id="@+id/pw4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_login_pw_btn"
            android:layout_margin="16dp"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:columnCount="3"
        android:rowCount="4"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/num1"
            android:width="80dp"
            android:height="80dp"
            android:background="@drawable/selector_login_num_btn"
            android:text="1"
            android:textSize="24sp"
            android:textStyle="normal"
            android:textFontWeight="1000"
            android:layout_marginRight="16dp"/>

        <Button
            android:id="@+id/num2"
            android:width="80dp"
            android:height="80dp"
            android:background="@drawable/selector_login_num_btn"
            android:text="2"
            android:textSize="24sp"
            android:textStyle="normal"
            android:textFontWeight="1000"
            android:layout_marginRight="16dp"/>

        <Button
            android:id="@+id/num3"
            android:width="80dp"
            android:height="80dp"
            android:background="@drawable/selector_login_num_btn"
            android:text="3"
            android:textSize="24sp"
            android:textStyle="normal"
            android:textFontWeight="1000"/>

        <Button
            android:id="@+id/num4"
            android:width="80dp"
            android:height="80dp"
            android:background="@drawable/selector_login_num_btn"
            android:text="4"
            android:textSize="24sp"
            android:textStyle="normal"
            android:textFontWeight="1000"/>

        <Button
            android:id="@+id/num5"
            android:width="80dp"
            android:height="80dp"
            android:background="@drawable/selector_login_num_btn"
            android:text="5"
            android:textSize="24sp"
            android:textStyle="normal"
            android:textFontWeight="1000"/>

        <Button
            android:id="@+id/num6"
            android:width="80dp"
            android:height="80dp"
            android:background="@drawable/selector_login_num_btn"
            android:text="6"
            android:textSize="24sp"
            android:textStyle="normal"
            android:textFontWeight="1000"/>

        <Button
            android:id="@+id/num7"
            android:width="80dp"
            android:height="80dp"
            android:background="@drawable/selector_login_num_btn"
            android:text="7"
            android:textSize="24sp"
            android:textStyle="normal"
            android:textFontWeight="1000"/>

        <Button
            android:id="@+id/num8"
            android:width="80dp"
            android:height="80dp"
            android:background="@drawable/selector_login_num_btn"
            android:text="8"
            android:textSize="24sp"
            android:textStyle="normal"
            android:textFontWeight="1000"/>

        <Button
            android:id="@+id/num9"
            android:width="80dp"
            android:height="80dp"
            android:background="@drawable/selector_login_num_btn"
            android:text="9"
            android:textSize="24sp"
            android:textStyle="normal"
            android:textFontWeight="1000"/>

        <Button
            android:id="@+id/reset"
            android:width="80dp"
            android:height="80dp"
            android:background="@drawable/selector_login_num_btn"
            android:text="초기화"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textFontWeight="1000"/>

        <Button
            android:id="@+id/num0"
            android:width="80dp"
            android:height="80dp"
            android:background="@drawable/selector_login_num_btn"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="normal"
            android:textFontWeight="1000"/>

        <Button
            android:id="@+id/delete"
            android:width="80dp"
            android:height="80dp"
            android:background="@android:drawable/ic_input_delete"
            android:backgroundTint="#000000" />
    </GridLayout>
</LinearLayout>